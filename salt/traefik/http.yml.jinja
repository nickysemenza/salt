http:
  routers:
    to-grafana-direct:
      rule: "Host(`grafana.infra.nickysemenza.com`)"
      service: grafana-direct
      middlewares:
        - "cloudflare-ips"
        - "cloudflare-access"
    prometheus:
      rule: "Host(`prometheus.infra.nickysemenza.com`)"
      service: prometheus
      middlewares:
        - "cloudflare-ips"
        - "cloudflare-access"
    prometheus-home:
      rule: "Host(`prometheus-home.infra.nickysemenza.com`)"
      service: prometheus-home
      middlewares:
        - "cloudflare-ips"
        - "cloudflare-access"
    traefik-dashboard:
      rule: "Host(`traefik.infra.nickysemenza.com`)"
      service: api@internal
      middlewares:
        - "cloudflare-ips"
        - "cloudflare-access"
    hass:
      rule: "Host(`hass.infra.nickysemenza.com`)"
      service: hass
      middlewares:
        - "cloudflare-ips"
        - "cloudflare-access"
    unifi:
      rule: "Host(`unifi.infra.nickysemenza.com`)"
      service: unifi
      middlewares:
        - "cloudflare-ips"
        - "cloudflare-access"
        
  middlewares:
    cloudflare-access:
      forwardAuth:
        address: "http://localhost:{{pillar.get('ports')['cloudflare_access_forward_auth']}}/auth/7c6d913377f00e8781dfa2c785ae01b2f37f17c067b0fb830ad71e305a5a21d5"
    cloudflare-ips:
      ipWhiteList:
        sourceRange:
        {# https://www.cloudflare.com/ips-v6 #}
          - "2400:cb00::/32"
          - "2606:4700::/32"
          - "2803:f800::/32"
          - "2405:b500::/32"
          - "2405:8100::/32"
          - "2a06:98c0::/29"
          - "2c0f:f248::/32"
        {# https://www.cloudflare.com/ips-v4 #}
          - "173.245.48.0/20"
          - "103.21.244.0/22"
          - "103.22.200.0/22"
          - "103.31.4.0/22"
          - "141.101.64.0/18"
          - "108.162.192.0/18"
          - "190.93.240.0/20"
          - "188.114.96.0/20"
          - "197.234.240.0/22"
          - "198.41.128.0/17"
          - "162.158.0.0/15"
          - "104.16.0.0/12"
          - "172.64.0.0/13"
          - "131.0.72.0/22"
  services:
    grafana-direct:
      loadBalancer:
        servers:
        - url: http://localhost:{{pillar.get('ports')['grafana']}}
    prometheus:
      loadBalancer:
        servers:
        - url: http://localhost:{{pillar.get('ports')['prometheus']}}
    prometheus-home:
      loadBalancer:
        servers:
        - url: http://{{pillar.roles['pecan'].wg_ip}}:{{pillar.ports['prometheus']}}
    hass:
      loadBalancer:
        servers:
        - url: http://{{pillar.roles['pecan'].wg_ip}}:{{pillar.ports['hass']}}
    unifi:
      loadBalancer:
        servers:
        - url: https://localhost:8443